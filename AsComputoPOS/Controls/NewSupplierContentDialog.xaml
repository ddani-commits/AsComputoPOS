<ui:ContentDialog x:Class="TamoPOS.Controls.NewSupplierContentDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TamoPOS.Controls"
             mc:Ignorable="d" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
                  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
             ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             PrimaryButtonText = "Guardar"
             CloseButtonText="Cancelar"
             DialogMaxWidth="650"   
             DialogWidth="650"
             d:DesignHeight="450" d:DesignWidth="650">
    
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:NewSupplierContentDialog}" />
    </ui:ContentDialog.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>

            <Label Content="Nombre de la compañia:"/>
            <ui:TextBox 
                PlaceholderText="Ej. Coca cola" 
                Text="{Binding NameText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                x:Name="Name" Margin="0, 5" />
            <Label Content="Nombre del contacto:"/>
            <ui:TextBox 
                PlaceholderText="Ej. Matinez Gonzales" 
                Text="{Binding ContactNameText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                x:Name="ContactName" Margin="0, 5" />
            <Label Content="Dirección"/>
            <ui:TextBox 
                PlaceholderText="Ej. Calle 61-A" 
                Text="{Binding AddressText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                x:Name="Address" Margin="0, 5" />
            <Label Content="Correo electronico"/>
            <ui:TextBox 
                PlaceholderText="Ej. correo@ejemplo.com" 
                Text="{Binding EmailText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                x:Name="Email" Margin="0, 5" />
            <Label Content="Teléfono"/>
            <ui:TextBox 
                PlaceholderText="Ej. 9284012384" 
                Text="{Binding PhoneText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                x:Name="Phone" Margin="0, 5" />
            <TextBlock x:Name="ErrorsMessageTextBlock" Foreground="#B00020" />

        </StackPanel>
    </Grid>
</ui:ContentDialog>
