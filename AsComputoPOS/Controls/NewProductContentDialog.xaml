<ui:ContentDialog x:Class="TamoPOS.Controls.NewProductContentDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TamoPOS.Controls"
             mc:Ignorable="d" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
             ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             PrimaryButtonText="Guardar"
             SecondaryButtonText="Guardar y crear otro"
             CloseButtonText="Cancelar"
             DialogWidth="400"
             d:DesignHeight="450" d:DesignWidth="650">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:NewProductContentDialog}" />
    </ui:ContentDialog.Resources>

    <StackPanel>
        <Label Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Stretch" Content="Nombre del producto"/>
            <ui:TextBox 
                Grid.ColumnSpan="2" Grid.Row="1"
                PlaceholderText="Mi producto" 
                Text="{Binding ProductName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                x:Name="ProductNameField" Margin="0, 5" />

        <Label Content="Codigo de barras" Grid.Row="2"/>
        <ui:TextBox Grid.Row="3"
                PlaceholderText="Escanea o escribe" 
                Text="{Binding Barcode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                x:Name="BarcodeField" Margin="0, 5" />

        <Label Content="SKU" Grid.Row="4"/>
        <ui:TextBox Grid.Row="5"
                PlaceholderText="SKU" 
                Text="{Binding Barcode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                x:Name="SKUField" Margin="0, 5" />

        <Label Content="Categoría" Grid.Row="6"/>
        <ui:AutoSuggestBox PlaceholderText="Buscar" Grid.Row="7"/>

        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Label Content="C://Users/alejandro/downloads/image.jpg" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0, 10" />
            <ui:Button Content="Seleccionar imagen" HorizontalAlignment="Right" Grid.Row="0 " Grid.Column="1" />
                
            <Label HorizontalAlignment="Stretch" Content="Activo" Grid.Row="2" Grid.Column="0" Margin="0, 10"/>
            <ui:ToggleSwitch HorizontalAlignment="Right" Grid.Row="2" Grid.Column="2" IsChecked="{Binding IsActive}" />
        </Grid>
    </StackPanel>
</ui:ContentDialog>
