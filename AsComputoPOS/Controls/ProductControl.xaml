<UserControl x:Class="TamoPOS.Controls.ProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TamoPOS.Controls"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ui:Card Padding="8">
        <StackPanel Orientation="Horizontal" >
            <Rectangle 
                x:Name="ProductImage" 
                Width="90" 
                Height="90"
                Fill="Gray" />
            <StackPanel Margin="6, 0">
                <ui:TextBlock 
                    FontTypography="BodyStrong"
                    Text="{Binding Product.Name}" />
                <ui:TextBlock FontTypography="Body" Text="{Binding SalePrice, StringFormat={}{0:C2} }" />
                <ui:TextBlock FontTypography="Caption" Text="{Binding QuantityRemaining, StringFormat={}{0} existencias }" />
                <ui:Button 
                    Appearance="Dark"
                    Click="Button_Click"
                    Content="Agregar al carrito" />
            </StackPanel>
            <TextBlock Text="{Binding Product.SKU}" />
        </StackPanel>
    </ui:Card>
</UserControl>