<ui:ContentDialog x:Class="TamoPOS.Controls.NewCategoryContentDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TamoPOS.Controls"
             mc:Ignorable="d" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:pages="clr-namespace:TamoPOS.ViewModels.Pages" d:DataContext="{d:DesignInstance Type=pages:CategoryViewModel}"
                  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
             ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             PrimaryButtonText = "Guardar"
             CloseButtonText="Cancel"
             DialogMaxWidth="650"   
             DialogWidth="650"
             d:DesignHeight="450" d:DesignWidth="650">

    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:NewCategoryContentDialog}" />
    </ui:ContentDialog.Resources>

    <Grid>
        <StackPanel>
            <ui:TextBlock Text="Categoría nueva" FontSize="24" Margin="0, 10, 0, 10" />
            <Label Content="Nombre de la categoría nueva:"/>
            <ui:TextBox
                PlaceholderText="Ej. Electronicos" 
                Text="{Binding CategoryNameText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                x:Name="CategoryName" Margin="0, 5" />
            <Label Content="Nombre de la categoría padre" />

            <ComboBox
                ItemsSource="{Binding CategoriesList}"
                SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                SelectedValuePath="CategoryId"
                Width="200"
                Margin="10">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding CategoryName}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
    </Grid>
</ui:ContentDialog>
