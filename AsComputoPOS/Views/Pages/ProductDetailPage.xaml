<Page x:Class="TamoPOS.Views.Pages.ProductDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TamoPOS.Views.Pages"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductDetailPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0">
            <Rectangle  Fill="Black" Height="100" Width="90"/>
            <Button Content="Cambiar"></Button>
        </StackPanel>

        <ui:Card Grid.Column="1" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--Title-->
                <ui:SymbolIcon Symbol="Box16" VerticalAlignment="Center" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
                <ui:TextBlock Grid.Column="1" Grid.Row="0" FontTypography="BodyStrong" Text="{Binding CurrentProduct.Name}" Margin="10,10,0,0"/>
                <ui:TextBox Grid.Column="2" Grid.Row="0"> Cambiar texto</ui:TextBox>
                <!--Categoria-->
                <ui:SymbolIcon Symbol="Tag16" VerticalAlignment="Center" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" Grid.Row="1"/>
                <ui:TextBlock Grid.Column="1" Grid.Row="1" Text="Categoría:" FontTypography="BodyStrong" Margin="10,10"/>
                <ui:TextBox  Grid.Column="2" Grid.Row="1"/>
                <!--Activo-->
                <ui:SymbolIcon Symbol="PlugDisconnected20" VerticalAlignment="Center" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" Grid.Row="2"/>
                <ui:TextBlock Text="Activar:" Grid.Row="2" Grid.Column="1" FontTypography="BodyStrong" Margin="10,10"/>
                <ui:ToggleSwitch Grid.Column="2" Grid.Row="2" Margin="10,10,0,0" HorizontalAlignment="Right"/>
            </Grid>
        </ui:Card>
        <ui:Card Grid.Column="1" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <!--Stack-->
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="TextMore20" Margin="5,0" VerticalAlignment="Center"/>
                        <ui:TextBlock FontTypography="BodyStrong" Text="En stock:" />
                    </StackPanel>
                    <ui:TextBlock FontTypography="Body" Text="200" Margin="10,0" HorizontalAlignment="Right"/>
                </StackPanel>
                <!--Vendidos al mes-->
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon VerticalAlignment="Center" Margin="5,0" Symbol="Cart24"/>
                        <ui:TextBlock FontTypography="BodyStrong"  Text="Vendidos este mes:"/>
                    </StackPanel>
                    <ui:TextBlock FontTypography="Body" Text="150" Margin="10,0" HorizontalAlignment="Right"/>
                </StackPanel>
                <!--Precio actual-->
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Money20" Margin="5,0" VerticalAlignment="Center"/>
                        <ui:TextBlock FontTypography="BodyStrong" Text="Precio actual:"/>
                    </StackPanel>
                    <ui:TextBlock FontTypography="Body" Text=" $ 100.00" Margin="10,0" HorizontalAlignment="Right"/>
                </StackPanel>
            </StackPanel>
        </ui:Card>
        
        <!--Historial-->
        <StackPanel Grid.Row="2" Grid.Column="2">
            <ui:TextBlock FontTypography="Subtitle" Text="Historial"/>
        <ui:DataGrid CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" CanUserResizeRows="False">
                <ui:DataGrid.Columns>
                    <DataGridTextColumn Header="Fecha"/>
                    <DataGridTextColumn Header="Total" Width="*"/>
                    <DataGridTextColumn Header="Subtotal" Width="*"/>
                    <DataGridTextColumn Header="Transacción" Width="*"/>
                    <DataGridTextColumn Header="Referencia" Width="*"/>
                    <DataGridTextColumn Header="Stock" Width="*"/>
                </ui:DataGrid.Columns>
            </ui:DataGrid>
        </StackPanel>
    </Grid>
</Page>
