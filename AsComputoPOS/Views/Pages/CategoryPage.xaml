<Page x:Class="TamoPOS.Views.Pages.CategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:local="clr-namespace:TamoPOS.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CategoryPage">

    <StackPanel>
        <Grid Margin="5" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch">
                <Button Command="{Binding ShowSignInContentDialogCommand}" HorizontalAlignment="Left"  Margin="0,0,5,0">
                    <ui:SymbolIcon  Symbol="Add28" />
                </Button>

                <Button Command="{Binding SaveCategoryCommand}" HorizontalAlignment="Left"  Margin="0,0,5,0">
                    <ui:SymbolIcon Symbol="Save28" />
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,0,5,0">
                
            <Button  Command="{Binding SelectFolderCommand}" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Exportar" Margin="0,0,5,0"/>
                    <ui:SymbolIcon Symbol="ArrowDownload16" Margin="0,0,5,0"/>
                </StackPanel>
            </Button>
            <Button  Command="{Binding ImportFormExcelCommand}" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Importar" />
                    <ui:SymbolIcon Symbol="Attach24" Margin="0,0,5,0"  />
                </StackPanel>
            </Button>
            </StackPanel>
        </Grid>
        <Grid>
            <ui:DataGrid ItemsSource="{Binding CategoriesList}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="5">
                <ui:DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding CategoryId}" Width="Auto"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding CategoryName}" Width="*"/>
                    <DataGridTextColumn Header="Categoria Padre" Binding="{Binding ParentCategoryName, Mode=OneWay}" Width="*"/>
                    <DataGridTemplateColumn Header="Acción">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}" HorizontalAlignment="Center" >
                                    <ui:SymbolIcon Symbol="Delete20" Foreground="Red"/>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>

                    </DataGridTemplateColumn>
                </ui:DataGrid.Columns>
            </ui:DataGrid>
        </Grid>
    </StackPanel>
</Page>