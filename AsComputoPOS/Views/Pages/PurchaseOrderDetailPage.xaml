<Page x:Class="TamoPOS.Views.Pages.PurchaseOrderDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TamoPOS.Views.Pages"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PurchaseOrderDetailPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0, 4">
            <ui:TextBlock FontTypography="Subtitle" Text="{Binding IdText}"/>
            <ui:TextBlock 
                FontTypography="Subtitle" 
                Margin="24, 0, 0, 0 "
                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" 
                Text="{Binding CurrentPurchaseOrder.PurchaseDate}"/>
        </StackPanel>

        <ui:Card Grid.Row="1" Margin="0, 4">
            <StackPanel Orientation="Horizontal">


                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="16, 0" >
                    <ui:SymbolIcon Symbol="BuildingShop24" VerticalAlignment="Top" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                    <StackPanel>
                        <ui:TextBlock Text="Proveedor" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                        <ui:TextBlock Text="{Binding CurrentPurchaseOrder.Supplier.Name}" />
                    </StackPanel>
                </StackPanel>


                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="16, 0">
                    <ui:SymbolIcon Symbol="PersonCall24" VerticalAlignment="Top" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                    <StackPanel>
                        <ui:TextBlock Text="Contacto" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />

                        <ui:TextBlock Text="{Binding CurrentPurchaseOrder.Supplier.ContactName}" />
                        <ui:TextBlock Text="{Binding CurrentPurchaseOrder.Supplier.Phone}" />
                        <ui:TextBlock Text="{Binding CurrentPurchaseOrder.Supplier.Email}" />
                    </StackPanel>
                </StackPanel>


                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="16, 0">
                    <ui:SymbolIcon Symbol="Money24" VerticalAlignment="Top" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                    <StackPanel>
                        <ui:TextBlock Text="Subtotal" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                        <ui:TextBlock Text="{Binding Subtotal}" />
                    </StackPanel>
                </StackPanel>


                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="16, 0">
                    <ui:SymbolIcon Symbol="Money24" VerticalAlignment="Top" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                    <StackPanel>
                        <ui:TextBlock Text="Total" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                        <ui:TextBlock Text="{Binding Total}" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ui:Card>


        <ui:CardControl Icon="{ui:SymbolIcon DataTrending24}" Grid.Row="2" Margin="0, 4">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
                            Margin="0"
                            FontTypography="BodyStrong"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="Margen de ganancia"
                            TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
                            Appearance="Secondary"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Calcula un precio de venta cada producto a partir de un porcentaje."
                            TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:NumberBox Icon="{ui:SymbolIcon DocumentPercent20}" Width="150"/>
        </ui:CardControl>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ui:TextBlock 
            FontTypography="Subtitle" 
            ToolTipService.ToolTip="Los productos que se adquirieron en esta orden de compra." 
            Text="Productos" 
            Grid.Column="0" 
            Margin="0, 4"/>

            <ui:Button Content="Agregar un producto" Appearance="Primary" Grid.Column="1" Command="{Binding ShowNewProductPurchaseDialogCommand}"/>
        </Grid>

        <ui:DataGrid 
            Grid.Row="4" 
            ItemsSource="{Binding ProductPurchases}" 
            AutoGenerateColumns="False" 
            Margin="0, 4">
            <ui:DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Product.Name}" Width="auto"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Quantity}" Width="auto"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat={}{0:C2}}" Width="auto"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat={}{0:C2}}" Width="auto"/>
                <DataGridTextColumn Header="Precio al publico" Binding="{Binding SalePrice, StringFormat={}{0:C2}}" Width="auto"/>
                <DataGridTextColumn Header="Margen en $" Binding="{Binding FlatProfitMargin, StringFormat={}{0:C2}}" Width="auto"/>
                <DataGridTextColumn Header="Margen en %" Binding="{Binding PercentProfitMargin, StringFormat={}{0:P2}}" Width="auto"/>
                <DataGridTextColumn Header="Restantes" Binding="{Binding QuantityRemaining}" Width="auto"/>
                <!--
                <DataGridTemplateColumn Header="Acción">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                    Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}" HorizontalAlignment="Center" >
                                <ui:SymbolIcon Symbol="Delete20" Foreground="Red"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                -->
            </ui:DataGrid.Columns>
        </ui:DataGrid>
    </Grid>
</Page>
