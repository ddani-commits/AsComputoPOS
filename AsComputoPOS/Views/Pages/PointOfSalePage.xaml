<Page x:Class="TamoPOS.Views.Pages.PointOfSalePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TamoPOS.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:controls="clr-namespace:TamoPOS.Controls"
      Title="PointOfSalePage">

    <Grid>
        <ItemsControl 
                Focusable="False"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                SizeChanged="ItemsControl_SizeChanged"
                ItemsSource="{Binding ProductsInStock}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" Focusable="False" ItemHeight="Auto" Margin="-8, 0, 0, 0" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <controls:ProductControl 
                            Data="{Binding}"
                            Command="{Binding DataContext.AddProductToCartCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding Product}"
                            Padding="8, 8, 0, 0"
                            Width="{Binding ProductControlWidth,RelativeSource={RelativeSource AncestorType=Page}}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
