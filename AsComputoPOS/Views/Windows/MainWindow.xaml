<ui:FluentWindow
    x:Class="UiDesktopApp1.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UiDesktopApp1.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{Binding ViewModel.ApplicationTitle, Mode=OneWay}"
    d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=True}"
    Width="1100" Height="650"
    d:DesignHeight="450" d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    WindowBackdropType="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            x:Name="TitleBar"
            Title="{Binding ViewModel.ApplicationTitle}"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="False">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/wpfui-icon-256.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!-- CONTENIDO PRINCIPAL CON DOS COLUMNAS -->
        <Grid Grid.Row="1" x:Name="MainContainer">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="0*" x:Name="SidePanelColumn" />
            </Grid.ColumnDefinitions>

            <!-- Contenedor de navegación y contenido -->
            <Grid Grid.Column="0">
                <ui:NavigationView
                    x:Name="RootNavigation"
                    Padding="42,0,42,0"
                    BreadcrumbBar="{Binding ElementName=BreadcrumbBar}"
                    FooterMenuItemsSource="{Binding ViewModel.FooterMenuItems, Mode=OneWay}"
                    FrameMargin="0"
                    IsBackButtonVisible="Collapsed"
                    IsPaneToggleVisible="True"
                    MenuItemsSource="{Binding ViewModel.MenuItems, Mode=OneWay}"
                    OpenPaneLength="175"
                    PaneDisplayMode="LeftMinimal">
                    <ui:NavigationView.Header>
                        <ui:BreadcrumbBar x:Name="BreadcrumbBar" Margin="42,32,42,20" />
                    </ui:NavigationView.Header>

                    <ui:NavigationView.ContentOverlay>
                        <Grid>
                            <ui:SnackbarPresenter x:Name="SnackbarPresenter" />
                        </Grid>
                    </ui:NavigationView.ContentOverlay>
                </ui:NavigationView>
            </Grid>

            <!-- Panel lateral -->
            <Border Grid.Column="1" Background="LightGray" x:Name="SidePanel">
                <StackPanel>
                    <TextBlock Text="Contenido del panel lateral" Margin="10"/>
                    <TextBlock Text="Panel lateral" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ContentPresenter encima de todo, para que los diálogos cubran ambos paneles -->
        <ContentPresenter x:Name="RootContentDialog" Grid.Row="1" Panel.ZIndex="99" />
    </Grid>

</ui:FluentWindow>